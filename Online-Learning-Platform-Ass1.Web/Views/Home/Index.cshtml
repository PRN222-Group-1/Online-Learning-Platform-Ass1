@model Online_Learning_Platform_Ass1.Web.Models.HomeViewModel

@{
    ViewData["Title"] = "Learn Without Limits";
}

<!-- Hero Section (Coursera style) -->
<section class="bg-light py-5 mb-5 rounded-3">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h1 class="display-4 fw-bold mb-3" style="color: #1f1f1f;">
                Learn without limits
            </h1>
            <p class="lead text-muted mb-4">
                Start, switch, or advance your career with thousands of courses from expert instructors.
            </p>
            <div class="d-flex gap-3 flex-wrap">
                <a asp-controller="Assessment" asp-action="Start" class="btn btn-primary btn-lg px-4" style="background: #0056d2; border: none;">
                    Get Started
                </a>
                <a asp-action="Index" asp-route-viewAll="true" class="btn btn-outline-dark btn-lg px-4">
                    Explore Courses
                </a>
            </div>
        </div>
        <div class="col-lg-6 d-none d-lg-block text-center">
            <img src="https://images.unsplash.com/photo-1522202176988-66273c2fd55f?w=600" 
                 alt="Learning" class="img-fluid rounded-3 shadow" style="max-height: 350px; object-fit: cover;">
        </div>
    </div>
</section>

<!-- Category Pills -->
<section class="mb-5">
    <div class="d-flex flex-wrap gap-2 justify-content-center">
        <a asp-action="Index" 
           class="btn @(Model.SelectedCategoryId == null && !Model.ViewAll && string.IsNullOrEmpty(Model.SearchTerm) ? "btn-primary" : "btn-outline-secondary") rounded-pill px-4">
            Featured
        </a>
        <a asp-action="Index" asp-route-viewAll="true"
           class="btn @(Model.ViewAll ? "btn-primary" : "btn-outline-secondary") rounded-pill px-4">
            All Courses
        </a>
        @foreach (var cat in Model.Categories)
        {
            <a asp-action="Index" asp-route-categoryId="@cat.Id"
               class="btn @(Model.SelectedCategoryId == cat.Id ? "btn-primary" : "btn-outline-secondary") rounded-pill px-4">
                @cat.Name
            </a>
        }
    </div>
</section>

<!-- Search Results Info -->
@if (!string.IsNullOrEmpty(Model.SearchTerm))
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4 class="mb-0">Results for "@Model.SearchTerm"</h4>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-x-lg"></i> Clear
        </a>
    </div>
}

<!-- Courses Section -->
<section class="mb-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">
                @if (Model.ViewAll) { <text>All Courses</text> }
                else if (Model.SelectedCategoryId.HasValue) { <text>@Model.Categories.FirstOrDefault(c => c.Id == Model.SelectedCategoryId)?.Name Courses</text> }
                else { <text>Most Popular Courses</text> }
            </h2>
            <p class="text-muted mb-0">Explore our top-rated courses</p>
        </div>
    </div>

    <div class="row g-4">
        @if (Model.FeaturedCourses != null && Model.FeaturedCourses.Any())
        {
            @foreach (var course in Model.FeaturedCourses)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card h-100 border-0 shadow-sm" style="border-radius: 8px; overflow: hidden;">
                        <!-- Course Image -->
                        <div style="height: 160px; overflow: hidden; background: #f5f5f5;">
                            @if (!string.IsNullOrEmpty(course.ImageUrl))
                            {
                                <img src="@course.ImageUrl" class="w-100 h-100" alt="@course.Title" style="object-fit: cover;">
                            }
                            else
                            {
                                <div class="w-100 h-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(135deg, #0056d2 0%, #00419e 100%);">
                                    <i class="bi bi-book text-white" style="font-size: 3rem;"></i>
                                </div>
                            }
                        </div>
                        
                        <div class="card-body d-flex flex-column">
                            <!-- Category Badge -->
                            <span class="badge bg-light text-dark mb-2" style="width: fit-content; font-weight: 600;">
                                @course.CategoryName
                            </span>
                            
                            <!-- Title -->
                            <h6 class="card-title fw-bold mb-2" style="line-height: 1.4;">
                                @course.Title
                            </h6>
                            
                            <!-- Instructor -->
                            <p class="text-muted small mb-2">
                                @course.InstructorName
                            </p>
                            
                            <!-- Rating placeholder -->
                            <div class="d-flex align-items-center mb-3">
                                <span class="text-warning me-1">
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-fill"></i>
                                    <i class="bi bi-star-half"></i>
                                </span>
                                <small class="text-muted">(4.5)</small>
                            </div>
                            
                            <!-- Price & Action -->
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="fw-bold" style="color: #0056d2;">@course.Price.ToString("C")</span>
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    View Course
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                <p class="text-muted mt-3">No courses available.</p>
            </div>
        }
    </div>
</section>

<!-- Learning Paths Section -->
<section class="mb-5 py-5 bg-light rounded-3 px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-1">Learning Paths</h2>
            <p class="text-muted mb-0">Structured programs to achieve your goals</p>
        </div>
        <a asp-controller="LearningPath" asp-action="Browse" class="btn btn-outline-primary">
            View All <i class="bi bi-arrow-right"></i>
        </a>
    </div>

    <div class="row g-4">
        @if (Model.FeaturedPaths != null && Model.FeaturedPaths.Any())
        {
            @foreach (var path in Model.FeaturedPaths)
            {
                <div class="col-lg-6">
                    <div class="card h-100 border-0 shadow-sm" style="border-radius: 8px;">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <span class="badge bg-primary mb-2">@path.Courses.Count() Courses</span>
                                    <h5 class="card-title fw-bold mb-1">@path.Title</h5>
                                </div>
                                <span class="fw-bold fs-5" style="color: #0056d2;">@path.Price.ToString("C")</span>
                            </div>
                            
                            <p class="text-muted small mb-3">@path.Description</p>
                            
                            <!-- Course list -->
                            <div class="mb-3">
                                @foreach (var course in path.Courses.Take(3))
                                {
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        <small>@course.Title</small>
                                    </div>
                                }
                                @if (path.Courses.Count() > 3)
                                {
                                    <small class="text-muted">+ @(path.Courses.Count() - 3) more courses</small>
                                }
                            </div>
                            
                            <a asp-controller="LearningPath" asp-action="Details" asp-route-id="@path.Id" 
                               class="btn btn-primary w-100" style="background: #0056d2; border: none;">
                                View Path
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-4">
                <p class="text-muted">No learning paths available.</p>
            </div>
        }
    </div>
</section>

<!-- CTA Section -->
<section class="text-center py-5 mb-4" style="background: linear-gradient(135deg, #0056d2 0%, #00419e 100%); border-radius: 12px;">
    <h2 class="text-white fw-bold mb-3">Not sure where to start?</h2>
    <p class="text-white opacity-75 mb-4">Take our skill assessment and get personalized recommendations</p>
    <a asp-controller="Assessment" asp-action="Start" class="btn btn-light btn-lg px-5">
        Start Assessment <i class="bi bi-arrow-right"></i>
    </a>
</section>

<partial name="_Chatbot" />
