@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.Order.UserOrderDto>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-4">
    <h2 class="mb-4">ðŸ“¦ My Orders</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            You haven't placed any orders yet.
            <a asp-controller="Course" asp-action="Index" class="alert-link">Browse courses</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-12 mb-3">
                    <div class="card @(order.Status == "expired" ? "border-secondary" : "")">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <h5 class="card-title mb-1">@order.ItemTitle</h5>
                                    <small class="text-muted">@order.ItemType</small>
                                </div>
                                <div class="col-md-2 text-center">
                                    <h5 class="mb-0">@order.Amount.ToString("C")</h5>
                                </div>
                                <div class="col-md-2 text-center">
                                    @if (order.Status == "pending")
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-clock me-1"></i>Pending
                                        </span>
                                    }
                                    else if (order.Status == "completed")
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle me-1"></i>Completed
                                        </span>
                                    }
                                    else if (order.Status == "expired")
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle me-1"></i>Expired
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">@order.Status</span>
                                    }
                                </div>
                                <div class="col-md-2 text-end">
                                    @if (order.CanContinuePayment)
                                    {
                                        <form asp-action="ContinuePayment" method="post" class="d-inline">
                                            <input type="hidden" name="orderId" value="@order.OrderId" />
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="bi bi-credit-card me-1"></i>Pay Now
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>

                            <hr class="my-2">

                            <div class="row small text-muted">
                                <div class="col-md-4">
                                    <i class="bi bi-calendar me-1"></i>
                                    Created: @order.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                </div>
                                @if (order.Status == "pending" && order.ExpiresAt.HasValue)
                                {
                                    <div class="col-md-4">
                                        <i class="bi bi-hourglass-split me-1"></i>
                                        @if (order.MinutesRemaining > 0)
                                        {
                                            <span class="text-danger fw-bold">
                                                Expires at: @order.ExpiresAt.Value.ToLocalTime().ToString("HH:mm:ss")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger fw-bold">Expired</span>
                                        }
                                    </div>
                                }
                                @if (order.CompletedAt.HasValue)
                                {
                                    <div class="col-md-4">
                                        <i class="bi bi-check2-circle me-1"></i>
                                        Completed: @order.CompletedAt.Value.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(order.PaymentMethod))
                                {
                                    <div class="col-md-4">
                                        <i class="bi bi-wallet2 me-1"></i>
                                        Payment: @order.PaymentMethod
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        // SignalR connection
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/orderHub")
            .withAutomaticReconnect()
            .build();

        // Listen for OrdersExpired event
        connection.on("OrdersExpired", function (expiredOrderIds) {
            console.log("ðŸ“¡ Received expired orders:", expiredOrderIds);
            
            // Reload page to show updated status
            location.reload();
        });

        // Start connection
        connection.start()
            .then(() => {
                console.log("âœ… SignalR connected");
            })
            .catch(err => {
                console.error("âŒ SignalR connection error:", err);
            });

        // Reconnection handling
        connection.onreconnecting(() => {
            console.log("ðŸ”„ SignalR reconnecting...");
        });

        connection.onreconnected(() => {
            console.log("âœ… SignalR reconnected");
        });

        connection.onclose(() => {
            console.log("ðŸ”Œ SignalR disconnected");
        });
    </script>
}
