@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.Order.UserOrderDto>

@{
    ViewData["Title"] = "My Orders";
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold mb-1">Order History</h1>
        <p class="text-muted mb-0">View all your past purchases</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success border-0 shadow-sm alert-dismissible fade show mb-4">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <div class="card border-0 shadow-sm" style="border-radius: 12px;">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0 py-3 px-4">Order</th>
                        <th class="border-0 py-3">Item</th>
                        <th class="border-0 py-3">Date</th>
                        <th class="border-0 py-3">Amount</th>
                        <th class="border-0 py-3">Status</th>
                        <th class="border-0 py-3 px-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="py-3 px-4">
                                <span class="text-muted small">#@order.OrderId.ToString().Substring(0, 8)...</span>
                            </td>
                            <td class="py-3">
                                <div class="d-flex align-items-center gap-2">
                                    <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center"
                                         style="width: 36px; height: 36px;">
                                        <i class="bi bi-@(order.ItemType == "Learning Path" ? "signpost-split" : "book") text-primary"></i>
                                    </div>
                                    <div>
                                        <span class="fw-medium">@order.ItemTitle</span>
                                        <br>
                                        <small class="text-muted">@order.ItemType</small>
                                    </div>
                                </div>
                            </td>
                            <td class="py-3">
                                <span>@order.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </td>
                            <td class="py-3">
                                <span class="fw-bold">@order.Amount.ToString("C")</span>
                            </td>
                            <td class="py-3">
                                @{
                                    var statusClass = order.Status switch
                                    {
                                        "completed" => "bg-success",
                                        "pending" => "bg-warning",
                                        "cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@order.Status</span>
                            </td>
                            <td class="py-3 px-4">
                                @if (order.CanContinuePayment)
                                {
                                    <a asp-action="ContinuePayment" asp-route-id="@order.OrderId" 
                                       class="btn btn-sm btn-primary" style="background: #0056d2; border: none;">
                                        Pay Now
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="OrderDetails" asp-route-id="@order.OrderId" 
                                       class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm text-center py-5" style="border-radius: 12px;">
        <div class="card-body">
            <i class="bi bi-receipt text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 fw-bold">No Orders Yet</h4>
            <p class="text-muted mb-4">You haven't made any purchases yet.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary" 
               style="background: #0056d2; border: none;">
                <i class="bi bi-search me-1"></i>Browse Courses
            </a>
        </div>
    </div>
}
