@model Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto

<div class="col-lg-6 col-md-12 mb-4">
    <div class="card card-modern h-100 shadow-sm">
        <div class="card-header @(Model.IsCustomPath ? "bg-primary" : "bg-gradient-primary") text-white">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    @if (Model.IsCustomPath)
                    {
                        <span class="badge bg-warning text-dark mb-1">
                            <i class="bi bi-magic"></i> Custom Path
                        </span>
                    }
                    <h5 class="mb-1">@Model.Title</h5>
                    <small>@Model.TotalCourses courses</small>
                </div>
                <span class="badge bg-light text-dark">@Model.EnrollmentStatus</span>
            </div>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="card-text text-muted small mb-3">
                    @if (Model.Description.Length > 100)
                    {
                        @(Model.Description.Substring(0, 100) + "...")
                    }
                    else
                    {
                        @Model.Description
                    }
                </p>
            }

            <!-- Progress Bar -->
            <div class="mb-3">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <label class="text-muted small mb-0">
                        <i class="bi bi-bar-chart"></i> Progress
                    </label>
                    <span class="badge bg-info">@Model.ProgressPercentage%</span>
                </div>
                <div class="progress" style="height: 24px;">
                    <div class="progress-bar @(Model.IsCustomPath ? "bg-primary" : "bg-success")" 
                         role="progressbar" 
                         style="width: @(Model.ProgressPercentage)%"
                         aria-valuenow="@Model.ProgressPercentage" 
                         aria-valuemin="0" 
                         aria-valuemax="100">
                        @Model.CompletedCourses / @Model.TotalCourses
                    </div>
                </div>
            </div>

            <!-- Status Info -->
            <div class="alert alert-info-light small mb-3">
                <i class="bi bi-info-circle"></i>
                Completed <strong>@Model.CompletedCourses</strong> of <strong>@Model.TotalCourses</strong> courses
            </div>

            <!-- Dates -->
            <div class="text-muted small mb-3">
                <div class="mb-1">
                    <i class="bi bi-calendar-event"></i>
                    Started: <strong>@Model.EnrolledAt.ToString("MMM dd, yyyy")</strong>
                </div>
                @if (Model.CompletedAt.HasValue)
                {
                    <div>
                        <i class="bi bi-check-circle"></i>
                        Completed: <strong>@Model.CompletedAt.Value.ToString("MMM dd, yyyy")</strong>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="d-flex gap-2">
                <a asp-action="Progress" asp-route-pathId="@Model.Id" class="btn btn-primary btn-sm flex-grow-1">
                    <i class="bi bi-play-circle"></i> Continue Learning
                </a>
                <form asp-action="DropPath" method="post" style="display: inline;"
                      onsubmit="return confirm('Are you sure you want to drop this learning path?');">
                    <input type="hidden" name="enrollmentId" value="@Model.EnrollmentId" />
                    <button type="submit" class="btn btn-outline-danger btn-sm">
                        <i class="bi bi-trash"></i> Drop
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
