@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.LearningPathViewModel>

@{
    ViewData["Title"] = "Learning Paths";
}

<!-- Header -->
<div class="mb-5">
    <h1 class="display-5 fw-bold mb-2">Learning Paths</h1>
    <p class="lead text-muted">Structured programs designed to help you achieve your career goals</p>
</div>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var path in Model)
        {
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100" style="border-radius: 12px; overflow: hidden;">
                    <!-- Card Header -->
                    <div class="p-4" style="background: linear-gradient(135deg, #0056d2 0%, #00419e 100%);">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="text-white">
                                <span class="badge bg-white bg-opacity-25 mb-2">
                                    <i class="bi bi-book me-1"></i>@path.Courses.Count() Courses
                                </span>
                                <h4 class="fw-bold mb-0">@path.Title</h4>
                            </div>
                            <div class="text-white text-end">
                                <div class="fs-4 fw-bold">@path.Price.ToString("C")</div>
                            </div>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-4">
                        @if (!string.IsNullOrEmpty(path.Description))
                        {
                            <p class="text-muted mb-4">
                                @(path.Description.Length > 120 ? path.Description.Substring(0, 120) + "..." : path.Description)
                            </p>
                        }

                        <!-- Courses Preview -->
                        <div class="mb-4">
                            <h6 class="text-muted small mb-3">What you'll learn:</h6>
                            @foreach (var course in path.Courses.Take(3))
                            {
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    <span class="small">@course.Title</span>
                                </div>
                            }
                            @if (path.Courses.Count() > 3)
                            {
                                <span class="text-muted small">+ @(path.Courses.Count() - 3) more courses</span>
                            }
                        </div>
                    </div>

                    <!-- Card Footer -->
                    <div class="card-footer bg-white border-0 p-4 pt-0">
                        <div class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@path.Id" class="btn btn-outline-primary flex-grow-1">
                                View Details
                            </a>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-action="Checkout" asp-route-id="@path.Id" 
                                   class="btn btn-primary flex-grow-1" style="background: #0056d2; border: none;">
                                    Enroll Now
                                </a>
                            }
                            else
                            {
                                <a asp-controller="User" asp-action="Login" 
                                   asp-route-returnUrl="@Url.Action("Details", "LearningPath", new { id = path.Id })"
                                   class="btn btn-primary flex-grow-1" style="background: #0056d2; border: none;">
                                    Login to Enroll
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-signpost-2 text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3">No Learning Paths Available</h4>
        <p class="text-muted">Check back later for curated learning paths.</p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary" style="background: #0056d2; border: none;">
            Browse Courses
        </a>
    </div>
}
