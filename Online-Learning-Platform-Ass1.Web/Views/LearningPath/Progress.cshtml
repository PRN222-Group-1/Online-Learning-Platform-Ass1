@model Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto

@{
    ViewData["Title"] = Model.Title;
}

<!-- Header -->
<div class="mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="MyPaths" class="text-decoration-none">My Paths</a></li>
            <li class="breadcrumb-item active">@Model.Title</li>
        </ol>
    </nav>
    
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            @if (Model.IsCustomPath)
            {
                <span class="badge bg-primary bg-opacity-10 text-primary mb-2">Custom Path</span>
            }
            <h1 class="fw-bold mb-2">@Model.Title</h1>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="text-muted">@Model.Description</p>
            }
        </div>
    </div>
</div>

<!-- Progress Overview -->
<div class="card border-0 shadow-sm mb-4" style="border-radius: 12px;">
    <div class="card-body p-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h5 class="fw-bold mb-3">Your Progress</h5>
                <div class="progress mb-2" style="height: 16px; border-radius: 8px;">
                    <div class="progress-bar bg-success" style="width: @Model.ProgressPercentage%">
                        @Model.ProgressPercentage%
                    </div>
                </div>
                <div class="d-flex justify-content-between text-muted small">
                    <span>@Model.CompletedCourses of @Model.TotalCourses courses completed</span>
                    <span>Started: @Model.EnrolledAt.ToString("MMM dd, yyyy")</span>
                </div>
            </div>
            <div class="col-md-4 text-md-end mt-3 mt-md-0">
                @if (Model.ProgressPercentage == 100)
                {
                    <span class="badge bg-success fs-6 px-3 py-2">
                        <i class="bi bi-trophy-fill me-1"></i>Completed!
                    </span>
                }
                else
                {
                    <span class="text-muted">@(Model.TotalCourses - Model.CompletedCourses) courses remaining</span>
                }
            </div>
        </div>
    </div>
</div>

<!-- Courses List -->
<div class="card border-0 shadow-sm" style="border-radius: 12px;">
    <div class="card-header bg-white border-0 p-4">
        <h5 class="mb-0 fw-bold">
            <i class="bi bi-list-check me-2 text-primary"></i>Courses in this Path
        </h5>
    </div>
    <div class="list-group list-group-flush">
        @{ int index = 1; }
        @foreach (var course in Model.Courses)
        {
            <div class="list-group-item p-4">
                <div class="d-flex gap-3">
                    <!-- Step Number -->
                    <div class="flex-shrink-0">
                        <div class="rounded-circle d-flex align-items-center justify-content-center fw-bold"
                             style="width: 48px; height: 48px; background: #0056d2; color: white;">
                            @index
                        </div>
                    </div>
                    
                    <!-- Course Info -->
                    <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <h6 class="fw-bold mb-1">@course.Title</h6>
                                <p class="text-muted small mb-2">@course.Description</p>
                                <div class="d-flex gap-3 text-muted small">
                                    <span><i class="bi bi-person me-1"></i>@course.InstructorName</span>
                                    <span><i class="bi bi-tag me-1"></i>@course.CategoryName</span>
                                </div>
                            </div>
                            <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" 
                               class="btn btn-sm btn-outline-primary">
                                View
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            index++;
        }
    </div>
</div>

<!-- Actions -->
<div class="d-flex justify-content-between align-items-center mt-4">
    <a asp-action="MyPaths" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to My Paths
    </a>
    <form asp-action="DropPath" method="post" onsubmit="return confirm('Are you sure you want to drop this learning path?');">
        <input type="hidden" name="enrollmentId" value="@Model.EnrollmentId" />
        <button type="submit" class="btn btn-outline-danger">
            <i class="bi bi-trash me-1"></i>Drop Path
        </button>
    </form>
</div>
