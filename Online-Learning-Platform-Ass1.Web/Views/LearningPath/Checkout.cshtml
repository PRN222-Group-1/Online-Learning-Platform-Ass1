@model Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.LearningPathViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Header -->
        <div class="text-center mb-4">
            <h1 class="fw-bold">Checkout</h1>
            <p class="text-muted">Complete your enrollment</p>
        </div>

        <div class="row g-4">
            <!-- Order Summary -->
            <div class="col-lg-7">
                <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                    <div class="card-header bg-white border-0 p-4">
                        <h5 class="mb-0 fw-bold">
                            <i class="bi bi-cart me-2"></i>Order Summary
                        </h5>
                    </div>
                    <div class="card-body p-4 pt-0">
                        <!-- Path Info -->
                        <div class="d-flex gap-3 p-3 bg-light rounded-3 mb-4">
                            <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center"
                                 style="width: 48px; height: 48px; flex-shrink: 0;">
                                <i class="bi bi-signpost-split"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="fw-bold mb-1">@Model.Title</h6>
                                <p class="text-muted small mb-0">@Model.Courses.Count() courses included</p>
                            </div>
                            <div class="text-end">
                                <span class="fw-bold" style="color: #0056d2;">@Model.Price.ToString("C")</span>
                            </div>
                        </div>

                        <!-- Courses List -->
                        <h6 class="text-muted mb-3">What's included:</h6>
                        <div class="mb-4">
                            @foreach (var course in Model.Courses.Take(5))
                            {
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-check-circle text-success me-2"></i>
                                    <span class="small">@course.Title</span>
                                </div>
                            }
                            @if (Model.Courses.Count() > 5)
                            {
                                <span class="text-muted small">+ @(Model.Courses.Count() - 5) more courses</span>
                            }
                        </div>

                        <!-- Features -->
                        <div class="border-top pt-4">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-infinity text-primary me-2"></i>
                                        <small>Lifetime access</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-award text-primary me-2"></i>
                                        <small>Certificate</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-phone text-primary me-2"></i>
                                        <small>Mobile access</small>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-arrow-repeat text-primary me-2"></i>
                                        <small>30-day refund</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Card -->
            <div class="col-lg-5">
                <div class="card border-0 shadow-sm" style="border-radius: 12px;">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-4">Payment</h5>

                        <!-- Price Summary -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Subtotal</span>
                                <span>@Model.Price.ToString("C")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Tax</span>
                                <span>$0.00</span>
                            </div>
                            <hr>
                            <div class="d-flex justify-content-between">
                                <span class="fw-bold">Total</span>
                                <span class="fw-bold fs-4" style="color: #0056d2;">@Model.Price.ToString("C")</span>
                            </div>
                        </div>

                        <!-- Checkout Form -->
                        <form asp-action="ProcessCheckout" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary w-100 py-3 mb-3" 
                                    style="background: #0056d2; border: none;">
                                <i class="bi bi-lock me-2"></i>Complete Enrollment
                            </button>
                        </form>

                        <p class="text-muted text-center small mb-0">
                            <i class="bi bi-shield-check me-1"></i>
                            Secure checkout powered by our platform
                        </p>
                    </div>
                </div>

                <!-- Cancel -->
                <div class="text-center mt-3">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="text-muted text-decoration-none">
                        <i class="bi bi-arrow-left me-1"></i>Cancel and go back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
