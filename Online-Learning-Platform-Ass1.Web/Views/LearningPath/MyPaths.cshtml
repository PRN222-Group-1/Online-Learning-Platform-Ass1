@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto>

@{
    ViewData["Title"] = "My Learning Paths";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h1 class="display-5 mb-3">
                    <i class="bi bi-signpost-split"></i> My Learning Paths
                </h1>
                <p class="lead text-muted">Track your learning progress across all paths</p>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var path in Model)
            {
                <div class="col-lg-6 col-md-12 mb-4">
                    <div class="card card-modern h-100 shadow-sm">
                        <div class="card-header bg-gradient-primary text-white">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="mb-1">@path.Title</h5>
                                    <small>@path.TotalCourses courses</small>
                                </div>
                                <span class="badge bg-light text-dark">@path.EnrollmentStatus</span>
                            </div>
                        </div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(path.Description))
                            {
                                <p class="card-text text-muted small mb-3">
                                    @if (path.Description.Length > 100)
                                    {
                                        @(path.Description.Substring(0, 100) + "...")
                                    }
                                    else
                                    {
                                        @path.Description
                                    }
                                </p>
                            }

                            <!-- Progress Bar -->
                            <div class="mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <label class="text-muted small mb-0">
                                        <i class="bi bi-bar-chart"></i> Progress
                                    </label>
                                    <span class="badge bg-info">@path.ProgressPercentage%</span>
                                </div>
                                <div class="progress" style="height: 24px;">
                                    <div class="progress-bar bg-success" 
                                         role="progressbar" 
                                         style="width: @(path.ProgressPercentage)%"
                                         aria-valuenow="@path.ProgressPercentage" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                        @path.CompletedCourses / @path.TotalCourses
                                    </div>
                                </div>
                            </div>

                            <!-- Status Info -->
                            <div class="alert alert-info-light small mb-3">
                                <i class="bi bi-info-circle"></i>
                                Completed <strong>@path.CompletedCourses</strong> of <strong>@path.TotalCourses</strong> courses
                            </div>

                            <!-- Dates -->
                            <div class="text-muted small mb-3">
                                <div class="mb-1">
                                    <i class="bi bi-calendar-event"></i>
                                    Started: <strong>@path.EnrolledAt.ToString("MMM dd, yyyy")</strong>
                                </div>
                                @if (path.CompletedAt.HasValue)
                                {
                                    <div>
                                        <i class="bi bi-check-circle"></i>
                                        Completed: <strong>@path.CompletedAt.Value.ToString("MMM dd, yyyy")</strong>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-light">
                            <div class="d-flex gap-2">
                                <a asp-action="Progress" asp-route-pathId="@path.Id" class="btn btn-primary btn-sm flex-grow-1">
                                    <i class="bi bi-play-circle"></i> Continue Learning
                                </a>
                                <form asp-action="DropPath" method="post" style="display: inline;"
                                      onsubmit="return confirm('Are you sure you want to drop this learning path?');">
                                    <input type="hidden" name="enrollmentId" value="@path.EnrollmentId" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                        <i class="bi bi-trash"></i> Drop
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card border-0 shadow-sm text-center py-5">
                    <div class="card-body">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-4 mb-2">No Learning Paths</h4>
                        <p class="text-muted mb-4">You haven't enrolled in any learning paths yet. Explore available paths to get started.</p>
                        <a asp-action="Browse" class="btn btn-primary">
                            <i class="bi bi-search"></i> Browse Learning Paths
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
