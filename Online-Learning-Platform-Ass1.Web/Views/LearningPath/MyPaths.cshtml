@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto>

@{
    ViewData["Title"] = "My Learning Paths";
    var customPaths = Model?.Where(p => p.IsCustomPath).ToList() ?? new List<Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto>();
    var standardPaths = Model?.Where(p => !p.IsCustomPath).ToList() ?? new List<Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto>();
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="fw-bold mb-1">My Learning Paths</h1>
        <p class="text-muted mb-0">Track your progress across all enrolled paths</p>
    </div>
    <a asp-action="Browse" class="btn btn-outline-primary">
        <i class="bi bi-plus-lg me-1"></i>Browse Paths
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success border-0 shadow-sm alert-dismissible fade show mb-4">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger border-0 shadow-sm alert-dismissible fade show mb-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model != null && Model.Any())
{
    <!-- Custom Paths -->
    @if (customPaths.Any())
    {
        <div class="mb-5">
            <div class="d-flex align-items-center gap-2 mb-3">
                <h4 class="fw-bold mb-0">
                    <i class="bi bi-magic text-primary me-2"></i>Your Personalized Paths
                </h4>
                <span class="badge bg-primary">@customPaths.Count</span>
            </div>
            
            <div class="row g-4">
                @foreach (var path in customPaths)
                {
                    <div class="col-lg-6">
                        <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <span class="badge bg-primary bg-opacity-10 text-primary mb-2">Custom Path</span>
                                        <h5 class="fw-bold mb-1">@path.Title</h5>
                                        <p class="text-muted small mb-0">@path.TotalCourses courses</p>
                                    </div>
                                    <span class="badge bg-success-subtle text-success">@path.EnrollmentStatus</span>
                                </div>
                                
                                <!-- Progress -->
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between small mb-1">
                                        <span class="text-muted">Progress</span>
                                        <span class="fw-bold">@path.ProgressPercentage%</span>
                                    </div>
                                    <div class="progress" style="height: 8px; border-radius: 4px;">
                                        <div class="progress-bar bg-primary" style="width: @path.ProgressPercentage%"></div>
                                    </div>
                                    <small class="text-muted">@path.CompletedCourses of @path.TotalCourses completed</small>
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <a asp-action="Progress" asp-route-pathId="@path.Id" class="btn btn-primary flex-grow-1" 
                                       style="background: #0056d2; border: none;">
                                        Continue
                                    </a>
                                    <form asp-action="DropPath" method="post" onsubmit="return confirm('Drop this path?');">
                                        <input type="hidden" name="enrollmentId" value="@path.EnrollmentId" />
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Standard Paths -->
    @if (standardPaths.Any())
    {
        <div class="mb-5">
            <div class="d-flex align-items-center gap-2 mb-3">
                <h4 class="fw-bold mb-0">
                    <i class="bi bi-bookmark-check text-success me-2"></i>Enrolled Paths
                </h4>
                <span class="badge bg-success">@standardPaths.Count</span>
            </div>
            
            <div class="row g-4">
                @foreach (var path in standardPaths)
                {
                    <div class="col-lg-6">
                        <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="fw-bold mb-1">@path.Title</h5>
                                        <p class="text-muted small mb-0">@path.TotalCourses courses</p>
                                    </div>
                                    <span class="badge bg-success-subtle text-success">@path.EnrollmentStatus</span>
                                </div>
                                
                                <!-- Progress -->
                                <div class="mb-3">
                                    <div class="d-flex justify-content-between small mb-1">
                                        <span class="text-muted">Progress</span>
                                        <span class="fw-bold">@path.ProgressPercentage%</span>
                                    </div>
                                    <div class="progress" style="height: 8px; border-radius: 4px;">
                                        <div class="progress-bar bg-success" style="width: @path.ProgressPercentage%"></div>
                                    </div>
                                    <small class="text-muted">@path.CompletedCourses of @path.TotalCourses completed</small>
                                </div>
                                
                                <div class="d-flex gap-2">
                                    <a asp-action="Progress" asp-route-pathId="@path.Id" class="btn btn-success flex-grow-1">
                                        Continue
                                    </a>
                                    <form asp-action="DropPath" method="post" onsubmit="return confirm('Drop this path?');">
                                        <input type="hidden" name="enrollmentId" value="@path.EnrollmentId" />
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}
else
{
    <div class="card border-0 shadow-sm text-center py-5" style="border-radius: 12px;">
        <div class="card-body">
            <i class="bi bi-signpost-2 text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 fw-bold">No Learning Paths Yet</h4>
            <p class="text-muted mb-4">Start your learning journey with a personalized path or browse our catalog.</p>
            <div class="d-flex gap-3 justify-content-center">
                <a asp-controller="Assessment" asp-action="Start" class="btn btn-primary" 
                   style="background: #0056d2; border: none;">
                    <i class="bi bi-clipboard-check me-1"></i>Take Assessment
                </a>
                <a asp-action="Browse" class="btn btn-outline-primary">
                    <i class="bi bi-search me-1"></i>Browse Paths
                </a>
            </div>
        </div>
    </div>
}
