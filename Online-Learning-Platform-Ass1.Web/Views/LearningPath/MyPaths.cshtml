@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto>

@{
    ViewData["Title"] = "My Learning Paths";
    var customPaths = Model?.Where(p => p.IsCustomPath).ToList() ?? new List<Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto>();
    var standardPaths = Model?.Where(p => !p.IsCustomPath).ToList() ?? new List<Online_Learning_Platform_Ass1.Service.DTOs.LearningPath.UserLearningPathWithProgressDto>();
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="mb-4">
                <h1 class="display-5 mb-3">
                    <i class="bi bi-signpost-split"></i> My Learning Paths
                </h1>
                <p class="lead text-muted">Track your learning progress across all paths</p>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle-fill"></i>
            <strong>Success!</strong> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Error!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        @if (customPaths.Any())
        {
            <div class="mb-4">
                <h4 class="text-primary mb-3">
                    <i class="bi bi-magic"></i> Your Personalized Paths
                    <span class="badge bg-primary">@customPaths.Count</span>
                </h4>
                <div class="row">
                    @foreach (var path in customPaths)
                    {
                        <partial name="_PathCard" model="path" />
                    }
                </div>
            </div>
        }

        @if (standardPaths.Any())
        {
            <div class="mb-4">
                <h4 class="text-success mb-3">
                    <i class="bi bi-bookmark-check"></i> Enrolled Paths
                    <span class="badge bg-success">@standardPaths.Count</span>
                </h4>
                <div class="row">
                    @foreach (var path in standardPaths)
                    {
                        <partial name="_PathCard" model="path" />
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card border-0 shadow-sm text-center py-5">
                    <div class="card-body">
                        <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                        <h4 class="mt-4 mb-2">No Learning Paths</h4>
                        <p class="text-muted mb-4">You haven't enrolled in any learning paths yet.</p>
                        <div class="d-flex gap-2 justify-content-center">
                            <a asp-controller="Assessment" asp-action="Start" class="btn btn-primary">
                                <i class="bi bi-clipboard-check"></i> Take Assessment
                            </a>
                            <a asp-action="Browse" class="btn btn-outline-success">
                                <i class="bi bi-search"></i> Browse Paths
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
