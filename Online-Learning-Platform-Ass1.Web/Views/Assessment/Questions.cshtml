@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.Assessment.AssessmentQuestionDto>

@{
    ViewData["Title"] = "Skill Assessment";
    var totalQuestions = Model.Count();
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <!-- Progress Header -->
        <div class="mb-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <span class="text-muted">Assessment Progress</span>
                <span class="text-muted">@totalQuestions questions</span>
            </div>
            <div class="progress" style="height: 6px; border-radius: 3px;">
                <div class="progress-bar" role="progressbar" style="width: 0%; background: #0056d2;" id="progressBar"></div>
            </div>
        </div>

        <!-- Questions Card -->
        <div class="card border-0 shadow-sm" style="border-radius: 16px;">
            <div class="card-body p-4 p-lg-5">
                <form asp-action="Submit" method="post" id="assessmentForm">
                    @{ int questionIndex = 0; }
                    @foreach (var question in Model)
                    {
                        <div class="question-slide @(questionIndex == 0 ? "" : "d-none")" data-question="@questionIndex">
                            <!-- Question Number -->
                            <div class="mb-4">
                                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2">
                                    Question @(questionIndex + 1) of @totalQuestions
                                </span>
                                @if (!string.IsNullOrEmpty(question.CategoryName))
                                {
                                    <span class="badge bg-light text-dark ms-2 px-3 py-2">@question.CategoryName</span>
                                }
                            </div>

                            <!-- Question Text -->
                            <h4 class="fw-bold mb-4">@question.QuestionText</h4>

                            <!-- Options -->
                            <div class="d-grid gap-3">
                                @foreach (var option in question.Options.OrderBy(o => o.OrderIndex))
                                {
                                    <label class="option-card">
                                        <input type="radio" 
                                               name="question_@question.Id" 
                                               value="@option.Id"
                                               class="d-none option-input"
                                               required>
                                        <div class="option-content p-4 border rounded-3 cursor-pointer">
                                            <div class="d-flex align-items-center">
                                                <div class="option-check me-3">
                                                    <i class="bi bi-circle fs-5"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="fw-medium">@option.OptionText</span>
                                                    @if (!string.IsNullOrEmpty(option.SkillLevel))
                                                    {
                                                        <span class="badge bg-light text-muted ms-2">@option.SkillLevel</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </label>
                                }
                            </div>
                        </div>
                        questionIndex++;
                    }

                    <!-- Navigation Buttons -->
                    <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
                        <button type="button" class="btn btn-outline-secondary px-4" id="prevBtn" disabled>
                            <i class="bi bi-arrow-left me-1"></i> Previous
                        </button>
                        
                        <button type="button" class="btn btn-primary px-4" id="nextBtn" 
                                style="background: #0056d2; border: none;">
                            Next <i class="bi bi-arrow-right ms-1"></i>
                        </button>
                        
                        <button type="submit" class="btn btn-success px-5 d-none" id="submitBtn">
                            <i class="bi bi-check-lg me-1"></i> Get Recommendations
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .option-card .option-content {
        transition: all 0.2s ease;
        cursor: pointer;
        background: #fff;
    }
    .option-card .option-content:hover {
        border-color: #0056d2 !important;
        background: #f8f9fa;
    }
    .option-card .option-input:checked + .option-content {
        border-color: #0056d2 !important;
        background: #e3f2fd;
    }
    .option-card .option-input:checked + .option-content .option-check i {
        color: #0056d2;
    }
    .option-card .option-input:checked + .option-content .option-check i::before {
        content: "\F26A"; /* bi-check-circle-fill */
    }
    .cursor-pointer { cursor: pointer; }
</style>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const totalQuestions = @totalQuestions;
        let currentQuestion = 0;
        
        const slides = document.querySelectorAll('.question-slide');
        const prevBtn = document.getElementById('prevBtn');
        const nextBtn = document.getElementById('nextBtn');
        const submitBtn = document.getElementById('submitBtn');
        const progressBar = document.getElementById('progressBar');
        
        function updateView() {
            slides.forEach((slide, index) => {
                slide.classList.toggle('d-none', index !== currentQuestion);
            });
            
            prevBtn.disabled = currentQuestion === 0;
            
            if (currentQuestion === totalQuestions - 1) {
                nextBtn.classList.add('d-none');
                submitBtn.classList.remove('d-none');
            } else {
                nextBtn.classList.remove('d-none');
                submitBtn.classList.add('d-none');
            }
            
            const progress = ((currentQuestion + 1) / totalQuestions) * 100;
            progressBar.style.width = progress + '%';
        }
        
        prevBtn.addEventListener('click', function() {
            if (currentQuestion > 0) {
                currentQuestion--;
                updateView();
            }
        });
        
        nextBtn.addEventListener('click', function() {
            // Check if current question is answered
            const currentSlide = slides[currentQuestion];
            const selectedOption = currentSlide.querySelector('input[type="radio"]:checked');
            
            if (!selectedOption) {
                alert('Please select an answer before continuing.');
                return;
            }
            
            if (currentQuestion < totalQuestions - 1) {
                currentQuestion++;
                updateView();
            }
        });
        
        updateView();
    });
</script>
}
