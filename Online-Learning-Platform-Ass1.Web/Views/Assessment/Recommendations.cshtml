@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.Assessment.LearningPathRecommendationDto>

@{
    ViewData["Title"] = "Recommended Learning Paths";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="text-center mb-5">
                <h1><i class="bi bi-stars me-2"></i>Your Recommended Learning Paths</h1>
                <p class="lead text-muted">Based on your assessment results, here are the most suitable learning paths for you</p>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        @foreach (var recommendation in Model)
        {
            <div class="card shadow mb-4">
                <div class="card-header bg-success text-white">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h3 class="mb-1">@recommendation.RecommendationTitle</h3>
                            <p class="mb-0">
                                <i class="bi bi-info-circle me-2"></i>@recommendation.RecommendationReason
                                <span class="badge bg-light text-dark ms-2">Level: @recommendation.SkillLevel</span>
                            </p>
                        </div>
                        @if (recommendation.PathId.HasValue && recommendation.PathPrice.HasValue)
                        {
                            <div class="text-end">
                                <h4 class="text-white mb-0">@recommendation.PathPrice.Value.ToString("C")</h4>
                                <small>Complete Path</small>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <!-- If this is a path recommendation, show the path info and "Enroll" button -->
                    @if (recommendation.PathId.HasValue)
                    {
                        <div class="alert alert-info-light mb-3">
                            <i class="bi bi-signpost-split"></i>
                            <strong>This is a complete learning path</strong> containing @recommendation.RecommendedCourses.Count() courses.
                            <a asp-controller="LearningPath" asp-action="Details" asp-route-id="@recommendation.PathId" class="alert-link ms-2">
                                View Details
                            </a>
                        </div>
                    }

                    <!-- Course List -->
                    <h6 class="text-muted mb-3">
                        <i class="bi bi-list-check"></i> Included Courses (@recommendation.RecommendedCourses.Count()):
                    </h6>
                    
                    <div class="row">
                        @foreach (var course in recommendation.RecommendedCourses)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 border">
                                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                                    {
                                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                                            <i class="bi bi-book" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@course.Title</h5>
                                        <p class="card-text text-muted small">
                                            @if (course.Description != null && course.Description.Length > 100)
                                            {
                                                @(course.Description.Substring(0, 100) + "...")
                                            }
                                            else
                                            {
                                                @course.Description
                                            }
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="badge bg-primary">@course.CategoryName</span>
                                            <strong class="text-success">@course.Price.ToString("C")</strong>
                                        </div>
                                        <p class="text-muted small mb-3">
                                            <i class="bi bi-person me-1"></i>@course.InstructorName
                                        </p>
                                        <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm w-100">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                
                <!-- Footer with Call-to-Action -->
                @if (recommendation.PathId.HasValue)
                {
                    <div class="card-footer bg-light">
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-controller="LearningPath" asp-action="Details" asp-route-id="@recommendation.PathId" 
                               class="btn btn-success">
                                <i class="bi bi-eye"></i> View Path
                            </a>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <a asp-controller="LearningPath" asp-action="Checkout" asp-route-id="@recommendation.PathId" 
                                   class="btn btn-primary">
                                    <i class="bi bi-cart-plus"></i> Buy Path
                                </a>
                            }
                            else
                            {
                                <a asp-controller="User" asp-action="Login" 
                                   asp-route-returnUrl="@Url.Action("Details", "LearningPath", new { id = recommendation.PathId })" 
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-box-arrow-in-right"></i> Login to Purchase
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning text-center">
            <h4>No Matching Paths Found</h4>
            <p>Please try again or contact us for assistance.</p>
        </div>
    }

    <div class="text-center mt-4 mb-5">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary me-2">
            <i class="bi bi-house me-2"></i>Back to Home
        </a>
        <a asp-action="Start" class="btn btn-outline-primary">
            <i class="bi bi-arrow-repeat me-2"></i>Retake Assessment
        </a>
    </div>
</div>
