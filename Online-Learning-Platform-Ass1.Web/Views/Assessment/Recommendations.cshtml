@model IEnumerable<Online_Learning_Platform_Ass1.Service.DTOs.Assessment.LearningPathRecommendationDto>

@{
    ViewData["Title"] = "Your Learning Recommendations";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <!-- Success Header -->
        <div class="text-center mb-5">
            <div class="rounded-circle bg-success bg-opacity-10 d-inline-flex align-items-center justify-content-center mb-3" 
                 style="width: 80px; height: 80px;">
                <i class="bi bi-check-lg text-success" style="font-size: 2.5rem;"></i>
            </div>
            <h1 class="display-5 fw-bold mb-3">Your Personalized Learning Path</h1>
            <p class="lead text-muted">Based on your assessment, here's what we recommend for you</p>
        </div>

        @if (Model != null && Model.Any())
        {
            @foreach (var recommendation in Model)
            {
                var isCustomPath = !recommendation.PathId.HasValue;
                
                <div class="card border-0 shadow-sm mb-4" style="border-radius: 16px; overflow: hidden;">
                    <!-- Header -->
                    <div class="p-4" style="background: @(isCustomPath ? "linear-gradient(135deg, #0056d2 0%, #00419e 100%)" : "linear-gradient(135deg, #28a745 0%, #1e7e34 100%)");">
                        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                            <div class="text-white">
                                <div class="d-flex align-items-center gap-2 mb-2">
                                    @if (isCustomPath)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-magic"></i> Custom Path
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-success">
                                            <i class="bi bi-award"></i> Recommended
                                        </span>
                                    }
                                    <span class="badge bg-white bg-opacity-25">@recommendation.SkillLevel Level</span>
                                </div>
                                <h3 class="fw-bold mb-1">@recommendation.RecommendationTitle</h3>
                                <p class="mb-0 opacity-75">@recommendation.RecommendationReason</p>
                            </div>
                            @if (recommendation.PathPrice.HasValue)
                            {
                                <div class="text-white text-end">
                                    <div class="fs-3 fw-bold">@recommendation.PathPrice.Value.ToString("C")</div>
                                    <small class="opacity-75">@recommendation.RecommendedCourses.Count courses included</small>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Courses Grid -->
                    <div class="card-body p-4">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-list-ol me-2"></i>Your Learning Journey (@recommendation.RecommendedCourses.Count courses)
                        </h6>
                        
                        <div class="row g-3">
                            @{ int num = 1; }
                            @foreach (var course in recommendation.RecommendedCourses)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="border rounded-3 p-3 h-100 position-relative" style="background: #fafafa;">
                                        <span class="badge bg-primary position-absolute" 
                                              style="top: -10px; left: 12px; width: 24px; height: 24px; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                                            @num
                                        </span>
                                        <h6 class="fw-bold mb-2 mt-2" style="font-size: 0.9rem;">@course.Title</h6>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="badge bg-light text-dark">@course.CategoryName</span>
                                            <small class="fw-bold" style="color: #0056d2;">@course.Price.ToString("C")</small>
                                        </div>
                                    </div>
                                </div>
                                num++;
                            }
                        </div>
                    </div>

                    <!-- Footer Actions -->
                    <div class="card-footer bg-light border-0 p-4">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                            @if (isCustomPath)
                            {
                                <div class="text-success">
                                    <i class="bi bi-check-circle-fill me-1"></i>
                                    <strong>Saved to My Paths!</strong> Start learning anytime.
                                </div>
                            }
                            else
                            {
                                <div class="text-muted small">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Pre-built learning path by expert instructors
                                </div>
                            }
                            
                            <div class="d-flex gap-2">
                                @if (recommendation.PathId.HasValue)
                                {
                                    <a asp-controller="LearningPath" asp-action="Details" asp-route-id="@recommendation.PathId" 
                                       class="btn btn-outline-primary">
                                        View Details
                                    </a>
                                    @if (User.Identity?.IsAuthenticated == true && !isCustomPath)
                                    {
                                        <a asp-controller="LearningPath" asp-action="Checkout" asp-route-id="@recommendation.PathId" 
                                           class="btn btn-primary" style="background: #0056d2; border: none;">
                                            Enroll Now
                                        </a>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card border-0 shadow-sm p-5 text-center" style="border-radius: 16px;">
                <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">No Recommendations Found</h4>
                <p class="text-muted">We couldn't generate recommendations. Please try again.</p>
                <a asp-action="Start" class="btn btn-primary">Retake Assessment</a>
            </div>
        }

        <!-- Action Buttons -->
        <div class="text-center mt-5">
            <div class="d-flex justify-content-center gap-3 flex-wrap">
                <a asp-controller="LearningPath" asp-action="MyPaths" class="btn btn-primary btn-lg px-4" 
                   style="background: #0056d2; border: none;">
                    <i class="bi bi-signpost-split me-2"></i>Go to My Paths
                </a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                    <i class="bi bi-house me-2"></i>Browse All Courses
                </a>
            </div>
            <p class="text-muted small mt-3">
                <a asp-action="Start" class="text-decoration-none">Retake assessment</a> to get different recommendations
            </p>
        </div>
    </div>
</div>
