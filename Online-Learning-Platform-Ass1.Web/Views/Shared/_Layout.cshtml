<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>@ViewData["Title"] - LearnHub</title>
  
  <!-- Google Fonts - Coursera style -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400;600;700;900&display=swap" rel="stylesheet">
  
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
  
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="~/css/modern-design-system.css" asp-append-version="true"/>
  <link rel="stylesheet" href="~/css/components.css" asp-append-version="true"/>
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
</head>

<body>
<!-- Top Banner (Coursera style) -->
<div class="top-banner bg-dark text-white text-center py-2 d-none d-md-block">
  <small>
    <i class="bi bi-stars"></i> 
    New to learning? <a href="/Assessment/Start" class="text-info text-decoration-underline">Take our skill assessment</a> to get personalized recommendations!
  </small>
</div>

<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom" id="mainNavbar">
    <div class="container">
      <!-- Logo -->
      <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index" style="color: #0056d2; font-size: 1.5rem;">
        <i class="bi bi-mortarboard-fill me-1"></i>LearnHub
      </a>
      
      <!-- Mobile Toggle -->
      <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <!-- Main Nav -->
        <ul class="navbar-nav me-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle fw-semibold" href="#" data-bs-toggle="dropdown">
              Explore
            </a>
            <ul class="dropdown-menu dropdown-menu-lg shadow border-0 p-3">
              <li><a class="dropdown-item py-2" asp-controller="Home" asp-action="Index"><i class="bi bi-grid me-2 text-primary"></i>Browse All Courses</a></li>
              <li><a class="dropdown-item py-2" asp-controller="LearningPath" asp-action="Browse"><i class="bi bi-signpost-split me-2 text-success"></i>Learning Paths</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item py-2" asp-controller="Assessment" asp-action="Start"><i class="bi bi-clipboard-check me-2 text-info"></i>Skill Assessment</a></li>
            </ul>
          </li>
        </ul>
        
        <!-- Search Bar (Coursera style) -->
        <form class="d-none d-lg-flex me-3" style="width: 400px;" method="get" asp-controller="Home" asp-action="Index">
          <div class="input-group">
            <span class="input-group-text bg-light border-end-0"><i class="bi bi-search text-muted"></i></span>
            <input type="text" class="form-control bg-light border-start-0" name="searchTerm" placeholder="What do you want to learn?" style="border-radius: 0 4px 4px 0;">
          </div>
        </form>
        
        <!-- Right Nav -->
        <ul class="navbar-nav">
          @if (User.Identity?.IsAuthenticated == true)
          {
            <li class="nav-item">
              <a class="nav-link" asp-controller="Course" asp-action="MyCourses">
                <i class="bi bi-journal-bookmark"></i> My Learning
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
              </a>
              <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                <li><a class="dropdown-item" asp-controller="LearningPath" asp-action="MyPaths"><i class="bi bi-signpost-2 me-2"></i>My Paths</a></li>
                <li><a class="dropdown-item" asp-controller="Order" asp-action="MyOrders"><i class="bi bi-receipt me-2"></i>My Orders</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item text-danger" asp-controller="User" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>Log Out</a></li>
              </ul>
            </li>
          }
          else
          {
            <li class="nav-item">
              <a class="nav-link fw-semibold" asp-controller="User" asp-action="Login">Log In</a>
            </li>
            <li class="nav-item ms-2">
              <a class="btn btn-primary px-4" asp-controller="User" asp-action="Register" style="background: #0056d2; border: none;">
                Join for Free
              </a>
            </li>
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<!-- Main Content -->
<main class="min-vh-100">
  @if (TempData["SuccessMessage"] != null)
  {
    <div class="container mt-3">
      <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        <div>@TempData["SuccessMessage"]</div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  }
  @if (TempData["ErrorMessage"] != null)
  {
    <div class="container mt-3">
      <div class="alert alert-danger alert-dismissible fade show d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>@TempData["ErrorMessage"]</div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    </div>
  }
  
  <div class="container py-4">
    @RenderBody()
  </div>
</main>

<!-- Footer (Coursera style) -->
<footer class="bg-dark text-white pt-5 pb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 mb-4">
        <h5 class="fw-bold mb-3">
          <i class="bi bi-mortarboard-fill me-1"></i>LearnHub
        </h5>
        <p class="text-muted small">
          Quality online education accessible to everyone. Start learning today and transform your career.
        </p>
      </div>
      
      <div class="col-lg-2 col-md-6 mb-4">
        <h6 class="fw-bold mb-3 text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Explore</h6>
        <ul class="list-unstyled">
          <li class="mb-2"><a href="/" class="text-muted text-decoration-none small">All Courses</a></li>
          <li class="mb-2"><a href="/LearningPath/Browse" class="text-muted text-decoration-none small">Learning Paths</a></li>
          <li class="mb-2"><a href="/Assessment/Start" class="text-muted text-decoration-none small">Skill Assessment</a></li>
        </ul>
      </div>
      
      <div class="col-lg-2 col-md-6 mb-4">
        <h6 class="fw-bold mb-3 text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Community</h6>
        <ul class="list-unstyled">
          <li class="mb-2"><a href="#" class="text-muted text-decoration-none small">Learner Stories</a></li>
          <li class="mb-2"><a href="#" class="text-muted text-decoration-none small">Partners</a></li>
          <li class="mb-2"><a href="#" class="text-muted text-decoration-none small">Blog</a></li>
        </ul>
      </div>
      
      <div class="col-lg-2 col-md-6 mb-4">
        <h6 class="fw-bold mb-3 text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">More</h6>
        <ul class="list-unstyled">
          <li class="mb-2"><a href="#" class="text-muted text-decoration-none small">About</a></li>
          <li class="mb-2"><a href="#" class="text-muted text-decoration-none small">Careers</a></li>
          <li class="mb-2"><a href="/Home/Privacy" class="text-muted text-decoration-none small">Privacy</a></li>
        </ul>
      </div>
      
      <div class="col-lg-3 col-md-6 mb-4">
        <h6 class="fw-bold mb-3 text-uppercase" style="font-size: 0.75rem; letter-spacing: 1px;">Connect</h6>
        <div class="d-flex gap-3">
          <a href="#" class="text-muted"><i class="bi bi-facebook fs-5"></i></a>
          <a href="#" class="text-muted"><i class="bi bi-linkedin fs-5"></i></a>
          <a href="#" class="text-muted"><i class="bi bi-twitter-x fs-5"></i></a>
          <a href="#" class="text-muted"><i class="bi bi-youtube fs-5"></i></a>
        </div>
      </div>
    </div>
    
    <hr class="my-4 border-secondary">
    
    <div class="d-flex flex-wrap justify-content-between align-items-center">
      <p class="text-muted small mb-0">&copy; 2026 LearnHub Inc. All rights reserved.</p>
      <div class="d-flex gap-3">
        <a href="#" class="text-muted small text-decoration-none">Terms</a>
        <a href="#" class="text-muted small text-decoration-none">Privacy</a>
        <a href="#" class="text-muted small text-decoration-none">Help</a>
      </div>
    </div>
  </div>
</footer>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", false)
</body>

</html>
