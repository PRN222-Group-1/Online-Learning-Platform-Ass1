@model ErrorViewModel
@{
  ViewData["Title"] = "Error";
}

<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card card-modern shadow-lg">
        <div class="card-body text-center p-5">
          <div class="mb-4">
            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 4rem;"></i>
          </div>
          
          <h1 class="display-5 fw-bold text-danger mb-3">Oops! Something went wrong</h1>
          <p class="lead text-muted mb-4">
            An error occurred while processing your request. Please try again later.
          </p>

          @if (Model.ShowRequestId)
          {
            <div class="alert alert-secondary mt-4">
              <p class="mb-0">
                <strong>Request ID:</strong><br>
                <code>@Model.RequestId</code>
              </p>
            </div>
          }

          <div class="mt-5">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg me-2">
              <i class="bi bi-house me-2"></i>Back to Home
            </a>
            <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
              <i class="bi bi-arrow-left me-2"></i>Go Back
            </a>
          </div>

          @if (this.Context.Request.Host.Host != "localhost" && !this.Context.Request.Host.Host.StartsWith("127."))
          {
            <div class="mt-4 pt-4 border-top">
              <p class="text-muted small">
                <i class="bi bi-info-circle me-2"></i>
                If this problem persists, please contact our support team.
              </p>
            </div>
          }
          else
          {
            <div class="alert alert-info mt-4">
              <h5 class="alert-heading">Development Mode Information</h5>
              <p>
                You're seeing this detailed error message because your application is running in <strong>Development</strong> mode.
              </p>
              <p class="mb-0">
                <strong>Note:</strong> Never enable Development mode in production as it can expose sensitive information.
              </p>
            </div>
          }
        </div>
      </div>
    </div>
  </div>
</div>
